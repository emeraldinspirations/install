set number relativenumber

highlight ColorColumn ctermbg=black
set colorcolumn=73,81

set listchars=tab:▸\ ,trail:·
set list

set spelllang=en
set spellfile=$HOME/Dropbox/vim/spell/en.utf-8.add

set tabstop=2
set shiftwidth=0
set expandtab

set showcmd

set hlsearch

noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>
